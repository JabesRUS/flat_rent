<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="202502251100" author="jabes">
        <sql>
            CREATE TYPE rooms_enum AS ENUM ('Только комната','1-комнатная',
            '2-комнатная', '3-комнатная', '4 и более комнатная квартира');
        </sql>
    </changeSet>

    <changeSet id="202502251125" author="jabes">
        <createTable tableName="apartment">
            <column name="id" type="serial">
                <constraints primaryKey="true" primaryKeyName="apartment_id_pk"/>
            </column>
            <column name="city" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="house_number" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="room_count" type="rooms_enum">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>